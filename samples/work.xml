<?xml version="1.0"?>
<gx>
	<frame id="win" title="Sizer Problems" onload="init" onunload="on_close">
		<menubar>
		<menu id="file" label="File">
		<item id="new" label="New" onselect="on_color"/>
		<separator/>
		<item id="quit" label="Quit" onselect="on_close"/>
		</menu>
		</menubar>
		<statusbar text="Hello, Pooper!"/>

		<panel orientation="horizontal">
			<button id="test" border="10" label="Press Me" onclick="on_message" />
			<line border="10" orientation="vertical" />
			<checkbox id="checkme" border="5" align="left" label="Check me" onselect="on_message"/>
			<line border="10"/>
			<text align="left" border="25" label="Try this for a text label"/>
			<line border="10"/>
			<radiobutton border="5" align="left" label="Try me" onselect="on_message"/>
		</panel>
	</frame>
</gx>
